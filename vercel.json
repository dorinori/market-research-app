{
    "version": 2,
    "builds": [
      {
        "src": "api/server.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.9"
        }
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist" 
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/server.py"
      },
      {
        "src": "/assets/(.*)",
        "dest": "dist/assets/$1"
      },
      {
        "src": "/(.*)",
        "dest": "dist/$1",
        "continue": true
      }
    ]
  }