{
    "version": 2,
    "builds": [
      {
        "src": "api/server.py", 
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.9",
          "maxLambdaSize": "15mb"
        }
      },
      {
        "src": "client/src/*",    
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"     
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",     
        "dest": "api/server.py"
      },
      {
        "src": "/(.*)",          
        "dest": "dist/$1"        
      }
    ]
  }